{
  "$schema": "https://ui.shadcn.com/schema/registry-item.json",
  "name": "modals-06",
  "type": "registry:block",
  "description": "Publish capsule collection modal with metadata display",
  "registryDependencies": [
    "dialog",
    "button",
    "card"
